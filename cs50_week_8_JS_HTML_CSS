                    <div class="Example">
                        <pre>
    Example:<br>
    def test(array: list):
        for el in range(len(array)):
            array[el] **= 2

        new_array = array[0:-1:2]
        array.reverse()

        result = ""
        for el in new_array:
            result += f"{str(el)}! "

        return result
                        </pre>
                </div>
                <div class="Samples">
                    <p><b>Samples:</b></p>
                    <button class="restart-btn">Restart</button>
                    <ol>
                        <li class="sample_1">
                            <button id="btn-1" class="activate-hover"> def test(array: list):<br>
                                &nbsp;&nbsp;return "! ".join([str(el**2) for el in array][-2::-2]) + "!"
                            </button>
                        </li>
                        <li class="sample_2">
                            <button id="btn-2" class="activate-hover"> def test(array: list):<br>
                                &nbsp;&nbsp;result = for el in array: el **=2<br>
                                &nbsp;&nbsp;result[::2].reverse()<br>
                                &nbsp;&nbsp;return str(result)
                            </button>
                        </li>
                        <li class="sample_3">
                            <button id="btn-3" class="activate-hover">def test(array: list):<br>
                                &nbsp;&nbsp;return "! ".join([str(el*2) for el in array][::-1]) + "!"
                            </button>
                        </li>
