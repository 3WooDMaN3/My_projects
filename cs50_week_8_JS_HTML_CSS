            <div class="section section-2">
                <h2>Part 2: Free Response</h2>
                <!-- TODO: Add free response question here -->
                <h3>Answer the question:</h3>
                <h3>Are the HTML and CSS programming languages?</h3>
                <h4><i>Write the answer in the input label and then press the check button.</i></h4>
                <input type="text" placeholder="Write your answer here" id="input">
                <button id="check">Check</button>
                <p id="result"><b></b></p>
            </div>
        </div>
        <script>
            // TODO: Add code to check answers to questions
            document.querySelector("#btn-1").addEventListener("click", function() {Check_answer("correct", "#btn-1")});
            document.querySelector("#btn-2").addEventListener("click", function() {Check_answer("incorrect", "#btn-2")});
            document.querySelector("#btn-3").addEventListener("click", function() {Check_answer("incorrect", "#btn-3")});
            document.querySelector(".restart-btn").addEventListener("click", function() {Restart()});

            function Restart(){
                location.reload()
            }
            function Check_answer(answer, option){
                let element = document.querySelector(option)
                if (answer === 'correct') {
                    element.textContent = 'Correct answer!';
                    element.setAttribute("style", "background-color: green; text-align: center; font-size: 20px; height: 100px;");
                    element.classList.add('disable-hover');
                    element.classList.remove("activate-hover");
                    element.type = "text";


                } else {
                    element.textContent = 'Incorrect answer!';
                    element.setAttribute("style", "background-color: red; text-align: center; font-size: 20px; height: 100px;");
                    element.classList.add('disable-hover');
                    element.classList.remove("activate-hover");
                    element.type = "text";
                }
            }

            document.querySelector("#check").addEventListener("click", function() {Check_input()});

            function Check_input(){
                let element = document.querySelector("#input").value;
                let result = document.querySelector("#result");
                if (element === "no"){
                    result.textContent = "You are correct :)";
                    result.setAttribute("style", "background-color: green; text-align: center; font-size: 40px; height: 100px; line-height: 100px;");
                } else {
                    result.textContent = "Unfortunately, this is not correct :(";
                    result.setAttribute("style", "background-color: red; text-align: center; font-size: 35px; height: 100px; line-height: 100px;");
                }
            }

        </script>
